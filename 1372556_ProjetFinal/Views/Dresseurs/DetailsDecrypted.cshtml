@model List<_1372556_ProjetFinal.Models.Dresseur>
@{
    Layout = "_Layout";
}
<style>
    /* Ajoutez du style pour organiser les dresseurs en rangées */
    .dresseur-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .dresseur-card {
        width: 22%; /* Largeur pour afficher 4 dresseurs par rangée avec un espace entre eux */
        margin-bottom: 20px;
        padding: 10px;
        border: 5px solid black; /* Bordure noire épaisse */
        border-radius: 10px;
        background-color: #ff0000; /* Rouge comme une Pokeball */
        color: #fff; /* Texte blanc pour contraster */
    }
</style>

<h2>Liste des Dresseurs (Données déchiffrées)</h2>

<div class="dresseur-container">
    @foreach (var dresseur in Model)
    {
        <div class="dresseur-card">
            <table class="table">
                <tr>
                    <th>ID</th>
                    <td>@dresseur.IdDresseur</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>@dresseur.Nom</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>@dresseur.Prenom</td>
                </tr>
                <tr>
                    <th>Badge Count</th>
                    <td style="background-color: @(dresseur.BadgeCount.HasValue ? "white" : "")">@dresseur.BadgeCount</td>
                </tr>
            </table>
        </div>
    }
</div>
